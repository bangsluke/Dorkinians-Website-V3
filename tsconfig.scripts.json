{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@/lib/*": ["./lib/*"]
		}
	},
	"include": ["scripts/**/*.ts", "lib/**/*.ts"],
	"exclude": ["node_modules", ".next"]
}
